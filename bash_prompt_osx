#Requires the bash_colours_osx to be included

# Git branch in prompt.

parse_git_branch() {

    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'

}

export CLICOLOR=1

export LSCOLORS=GxFxCxDxBxegedabagaced

export PS1="\[$White\]\h\[$White\]: [\[$Green\]\w\[$White\]\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" - \")\[$Yellow\]\$(parse_git_branch)\[$White\]] \$ \[$Color_Off\]"
