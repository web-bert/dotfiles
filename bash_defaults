#Colour the prompt - may have to ensure force_color_prompt=yes in the main bash file
if [ "$color_prompt" = yes ]; then
	#Change the prompt to have the git directory and use nice colours for the other parts
	PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]\033[01;33m\]$(__git_ps1):\[\033[01;37m\]\w\[\033[00m\]\$ '
fi

#Aliases
alias ll='ls -lah'
alias show_ports='netstat -anltp | grep "LISTEN"'
alias show_node='ps -ef | grep "node"'
